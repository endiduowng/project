<div class="page-top-info">
  <div class="container">
    <h4>Your order</h4>
    <div class="site-pagination">
      <a href="">Home</a> /
      <a href="">Your order</a>
    </div>
  </div>
</div>

<section class="checkout-section spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 order-2 order-lg-1">
        <div class="checkout-form">
          <div class="cf-title">Billing Address</div>
          <div class="row">
            <div class="col-md-7">
              <p>*Billing Information</p>
            </div>
          </div>
          <%= form_for(@order) do |f| %>
              <%= render "shared/devisemes", {resource: @order} %>
              <div class="row address-inputs">
                <div class="col-md-12">
                  <%= f.hidden_field :user_id, value: current_user.id %>
                  <%= f.text_field :name, placeholder: "Name" %>
                  <%= f.text_field :address, placeholder: "Address" %>
                  <%= f.text_field :email, placeholder: "Email" %>
                </div>
                <div class="col-md-6">
                  <input type="text" placeholder="Zip code">
                </div>
                <div class="col-md-6">
                   <%= f.text_field :phone, placeholder: "Phone" %>
                </div>

                <%= f.submit "Payment with Paypal", class: "site-btn submit-order-btn" %>
              </div>
            <% end %>
        </div>
      </div>

      <div class="col-lg-4 order-1 order-lg-2">
        <div class="checkout-cart">
          <h3>Your Cart</h3>
          <ul class="product-list">
            <% current_cart.line_items.each do |line_item| %>
              <li>
                <div class="pl-thumb"><img><%= image_tag(line_item.product.image.split(/,/).first) %></div>
                <h6><%= line_item.product.product_name %></h6>
                <p>$<%= line_item.total_price %></p>
              </li>
            <% end %>
          </ul>
          <ul class="price-list">
            <li>Total<span>$<%= current_cart.total_price %></span></li>
            <li>Shipping<span>free</span></li>
            <li class="total">Total<span>$<%= current_cart.total_price %></span></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
