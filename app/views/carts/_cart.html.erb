
<div class="page-top-info">
  <div class="container">
    <h4>Your cart</h4>
    <div class="site-pagination">
      <a href="">Home</a> /
      <a href="">Your cart</a>
    </div>
  </div>
</div>
<!-- Page info end -->


<!-- cart section end -->
<section class="cart-section spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="cart-table">
          <h3>Your Cart</h3>
          <div class="cart-table-warp">
            <table>
              <thead>
                <tr>
                  <th class="product-th">Product</th>
                  <th class="quy-th">Quantity</th>
                  <th class="size-th">SizeSize</th>
                  <th class="total-th">Price</th>
                </tr>
              </thead>
              <tbody>
                <%= render cart.line_items %>
              </tbody>
            </table>
          </div>
          <div class="total-cost">
            <h6>Total <span><%= number_to_currency(cart.total_price) %></span></h6>
          </div>
        </div>
      </div>
      <div class="col-lg-4 card-right">
        <form class="promo-code-form">
          <input type="text" placeholder="Enter promo code">
          <button>Submit</button>
        </form>
        <%= button_to 'Empty cart', cart, class: "site-btn sb-dark", :method => :delete, data: {:confirm => 'Are you sure?' } %>
        <%= button_to 'Checkout', new_order_path, :method => :get, class: "site-btn" %>
        <a href="/" class="site-btn sb-dark">Continue shopping</a>
      </div>
    </div>
  </div>
</section>
<!-- cart section end -->

<!-- Related product section -->
<section class="related-product-section">
  <div class="container">
    <div class="section-title text-uppercase">
      <h2>Continue Shopping</h2>
    </div>
    <div class="row">
      <%= 4.times do %>
        <%= render "products/random_product", {product: random_product } %>
      <% end %>
    </div>
  </div>
</section>
