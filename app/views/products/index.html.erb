<!DOCTYPE html>
<html lang="zxx">
<head>
  <title>Divisima | eCommerce Template</title>

</head>
<body>
  <br>
  <section class="product-filter-section">
    <div class="container">
      <div class="section-title">
        <h2>BROWSE TOP SELLING PRODUCTS</h2>
      </div>
      <ul class="product-filter-menu">
        <li><a href="#">TOPS</a></li>
        <li><a href="#">JUMPSUITS</a></li>
        <li><a href="#">LINGERIE</a></li>
        <li><a href="#">JEANS</a></li>
        <li><a href="#">DRESSES</a></li>
        <li><a href="#">COATS</a></li>
        <li><a href="#">JUMPERS</a></li>
        <li><a href="#">LEGGINGS</a></li>
      </ul>

      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
          <li class="page-item"><%= link_to_prev_page @products, "Previous", class: "page-link" %></li>
          <li class="page-item"><%= link_to_next_page @products, "Next", class: "page-link" %></li>
        </ul>
      </nav>

      <br>

      <div class="row">
        <% @products.each do |product| %>
          <%= render "product", {product: product}%>
        <% end %>
      </div>
      <div class="text-center pt-5">
        <%= link_to_next_page @products, "LOAD MORE", class: "site-btn sb-line sb-dark" %>
      </div>
      <br>
      <br>

      <% if user_signed_in? %>
        <div class="dropdown-divider"></div>
        <br>
        <br>
        <div>
          <div class="section-title">
            <h2>PRODUCTS YOU MAY LIKE</h2>
          </div>
          <div class="row">
            <% current_user.recommend_products[0...4].each do |key, value| %>
              <%= render "recommend_by_like", {product: key}%>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="dropdown-divider"></div>
      <br>
      <br>

      <div>
        <div class="section-title">
          <h2>TOP RATE PRODUCTS</h2>
        </div>
        <div class="row">
          <% @top_reviews[0...4].each do |product| %>
            <%= render "product", {product: product}%>
          <% end %>
        </div>
      </div>

      <% if recent_products.size != 0 %>
        <div class="dropdown-divider"></div>
        <br>
        <br>

        <div>
          <div class="section-title">
            <h2>RECENT PRODUCTS</h2>
          </div>
          <div class="row">
            <% recent_products.reverse.each do |product| %>
              <%= render "product", {product: product}%>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-9">
          <ul id="conversations-list">
            <% @conversations.each do |conversation| %>
              <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
            <% end %>
          </ul>
        </div>

        <div class="col-md-3">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">User list</h3>
            </div>
            <div class="panel-body">
              <ul style="padding-left: 0px; list-style: none;">
                <% @users.each do |user| %>
                  <li><%= link_to user.email, conversations_path(user_id: user.id), remote: true, method: :post %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>
  <!-- Product filter section end -->
</body>
</html>
