<div class="row">
  <div class="col-9">
    <h1>All Products</h1>
    <div class="card-group">
      <% @products[0..3].each do |product| %>
        <%= render "product", { product: product} %>
      <% end %>
    </div>

    <h1>Sales</h1>
    <div class="card-group">
      <% @products[0..3].each do |product| %>
        <%= render "product", { product: product} %>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <h1>Recommended products for you</h1>
      <div class="card-group">
        <% current_user.recommend_products[0..3].each do |key, value| %>
          <%= render "product", { product: key} %>
        <% end %>
      </div>
    <% end %>

  </div>

  <div class="col-3">
    <div id="cart">
      <%= hide_cart_if(current_cart.line_items.empty?, :id => "cart") do %>
        <%= render current_cart %>
      <% end %>
    </div>
  </div>
</div>
