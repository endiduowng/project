<div class="page-top-info">
  <div class="container">
    <h4>Your purchase history</h4>
    <div class="site-pagination">
      <a href="">Home</a> /
      <a href="">Your purchase history</a>
    </div>
  </div>
</div>
<!-- Page info end -->


<!-- cart section end -->
<section class="cart-section spad">
  <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="cart-table">
            <h3>Your Cart</h3>
            <div class="cart-table-warp">
              <table>
                <thead>
                  <tr>
                    <th class="product-th">Product</th>
                    <th class="quy-th">Quantity</th>
                    <th class="size-th">SizeSize</th>
                    <th class="total-th">Price</th>
                  </tr>
                  <div class="dropdown-divider"></div>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td>
                        <div class="dropdown-divider"></div>
                        <%= order.created_at %>
                      </td>
                    </tr>
                    <%= render order.line_items %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <% if @orders != nil %>
        <div class="dropdown-divider"></div>
        <br>
        <div>
          <div class="section-title">
            <h2>YOU CAN WANT BUY</h2>
          </div>
          <div class="row">
            <%= render "products/product", {product: @product1}%>
            <%= render "products/product", {product: @product2}%>
            <%= render "products/product", {product: @product3}%>
            <%= render "products/product", {product: @product4}%>
          </div>
        </div>
      <% end %>
  </div>
</section>
