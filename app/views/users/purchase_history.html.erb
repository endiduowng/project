<div class="page-top-info">
  <div class="container">
    <h4>Your purchase history</h4>
    <div class="site-pagination">
      <a href="">Home</a> /
      <a href="">Your purchase history</a>
    </div>
  </div>
</div>
<!-- Page info end -->


<!-- cart section end -->
<section class="cart-section spad">
  <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="cart-table">
            <h3>Your Cart</h3>
            <div class="cart-table-warp">
              <table>
                <thead>
                  <tr>
                    <th class="product-th">Product</th>
                    <th class="quy-th">Quantity</th>
                    <th class="size-th">Size</th>
                    <th class="total-th">Price</th>
                  </tr>
                  <div class="dropdown-divider"></div>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td>
                        <div class="dropdown-divider"></div>
                        <%= order.created_at %>
                      </td>
                    </tr>
                    <% order.line_items.each do |line_item| %>
                      <tr>
                        <td class="product-col">
                          <img><%= image_tag(line_item.product.image.split(/,/).first) %>
                          <div class="pc-title">
                            <h4><%= line_item.product.product_name %></h4>
                            <p>$<%= line_item.price_unit %></p>
                          </div>
                        </td>
                        <td class="quy-col">
                          <div class="quantity">
                            <div class="pro-qty">
                              <input type="text" value="<%= line_item.quantity %>" readonly>
                            </div>
                          </div>
                        </td>
                        <td class="size-col"><h4>Size M</h4></td>
                        <td class="total-col"><h4><%= number_to_currency(line_item.total_price) %></h4></td>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <% if @orders != nil %>
        <div class="dropdown-divider"></div>
        <br>
        <div>
          <div class="section-title">
            <h2>YOU CAN WANT BUY</h2>
          </div>
          <div class="row">
            <%= render "products/product", {product: @product1}%>
            <%= render "products/product", {product: @product2}%>
            <%= render "products/product", {product: @product3}%>
            <%= render "products/product", {product: @product4}%>
          </div>
        </div>
      <% end %>
  </div>
</section>
